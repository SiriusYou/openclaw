{
  // ==========================================================================
  // OpenClaw Marketing Agent System — Configuration
  // ==========================================================================

  // --- Gateway Security ---
  gateway: {
    mode: "local",
    bind: "loopback",
    port: 18789,
    trustedProxies: [],
  },

  // --- Logging & Diagnostics ---
  logging: {
    level: "info",
    redactSensitive: "tools",
  },
  diagnostics: {
    enabled: true,
    flags: ["gateway.*", "session.*", "webhook.*", "agent.*"],
  },

  // --- Memory ---
  // NOTE: Paths use __WORKSPACE_ROOT__ placeholder, resolved by setup.sh
  memory: {
    backend: "builtin",
    citations: "auto",
    qmd: {
      paths: [
        { path: "__WORKSPACE_ROOT__/marketing/memory/", name: "Marketing Knowledge" },
        { path: "__WORKSPACE_ROOT__/marketing/strategies/", name: "Campaign Strategies" },
        { path: "__WORKSPACE_ROOT__/marketing/performance/", name: "Performance Data" },
        { path: "__WORKSPACE_ROOT__/analytics/memory/", name: "Market Research" },
      ],
      sessions: {
        enabled: true,
        retentionDays: 180,
      },
      update: {
        interval: "5m",
        embedInterval: "30m",
      },
      limits: {
        maxResults: 10,
        maxSnippetChars: 500,
      },
    },
  },

  // --- Agents ---
  agents: {
    defaults: {
      model: {
        primary: "anthropic/claude-sonnet-4-5-20250929",
        fallbacks: ["anthropic/claude-opus-4-6"],
      },
    },

    list: [
      // --- Marketing Orchestrator ---
      // NOTE: id MUST be "main" — OpenClaw has a bug where session path
      // validation always checks against agents/main/sessions/ regardless
      // of the actual agent ID. Using any other ID causes:
      //   "Session file path must be within sessions directory"
      {
        id: "main",
        default: true,
        name: "Marketing Orchestrator",
        workspace: "__WORKSPACE_ROOT__/marketing",
        model: {
          primary: "anthropic/claude-sonnet-4-5-20250929",
          fallbacks: ["anthropic/claude-opus-4-6"],
        },
        skills: [
          "clawhub",
          "skill-from-masters",
          "search-skill",
          "skill-from-notebook",
          "campaign-brief",
          "content-ab-test",
        ],
        subagents: {
          allowAgents: ["content-writer", "analyst"],
          model: "anthropic/claude-sonnet-4-5-20250929",
        },
        tools: {
          profile: "full",
          allow: [
            "memory_search",
            "memory_get",
            "sessions_spawn",
            "clawhub",
          ],
        },
        memorySearch: { enabled: true },
        groupChat: {
          mentionPatterns: ["@orchestrator", "@marketing"],
        },
      },

      // --- Content Writer ---
      {
        id: "content-writer",
        name: "Content Writer",
        workspace: "__WORKSPACE_ROOT__/content",
        model: "anthropic/claude-sonnet-4-5-20250929",
        skills: ["content-calendar", "seo-analyzer"],
        tools: {
          profile: "full",
          allow: [
            "memory_search",
            "memory_get",
          ],
        },
        memorySearch: { enabled: true },
      },

      // --- Analyst ---
      {
        id: "analyst",
        name: "Marketing Analyst",
        workspace: "__WORKSPACE_ROOT__/analytics",
        model: {
          primary: "anthropic/claude-opus-4-6",
          fallbacks: ["anthropic/claude-sonnet-4-5-20250929"],
        },
        skills: ["campaign-analytics"],
        tools: {
          profile: "full",
          allow: [
            "memory_search",
            "memory_get",
            "browser_screenshot",
            "browser_navigate",
            "browser_snapshot",
          ],
        },
        memorySearch: { enabled: true },
        sandbox: {
          mode: "all",
          workspaceAccess: "ro",
          docker: {
            image: "openclaw-sandbox-browser:bookworm-slim",
          },
          browser: {
            enabled: true,
            headless: true,
          },
        },
      },
    ],
  },

  // --- Channel Bindings ---
  bindings: [
    {
      agentId: "main",
      match: { channel: "telegram", accountId: "*" },
    },
    {
      agentId: "main",
      match: { channel: "slack", accountId: "*" },
    },
  ],

  // --- Session Send Policy ---
  // default: "allow" permits CLI testing; Slack-specific rules can be added later
  session: {
    sendPolicy: {
      default: "allow",
    },
  },

  // --- Plugins ---
  // ~/.openclaw/extensions/ is auto-discovered, no need for plugins.load.paths
  plugins: {
    enabled: true,
  },

  // --- Cron ---
  // Cron jobs are managed via the API/CLI, not in config.
  // Use: openclaw cron add ... to create jobs after gateway starts.
  cron: {
    enabled: true,
  },
}
